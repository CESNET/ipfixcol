NAME = @PACKAGE_NAME@
TARGETS = ipfixcol
MANDIR = documentation/man
MANSRC = ipfixcol.dbk
#MANPAGES = ipfixcol.1
#MANSRCS = ipfixcol.dbk
SRCS =	src/ipfixcol.c \
	src/config.c \
	src/queues.c \
	src/preprocessor.c \
	src/data_manager.c \
	src/template_manager.c

PHDRS = src/config.h \
	src/data_manager.h \
	src/queues.h \
	src/preprocessor.h

HDRS =	headers/ipfix.h \
	headers/input.h \
	headers/storage.h \
	headers/templates.h \

CONF=	config/internalcfg.xml \
	config/ipfix-elements.xml \
	config/startup.xml

# The form of name is 'storage/'<name of subdir in src/storage/>
STORAGE_PLUGINS = @STORAGE_PLUGINS@

# The form of name is 'input/'<name of subdir in src/input/>
INPUT_PLUGINS = @INPUT_PLUGINS@

# Tests in devel-tools/tests that should be built on "make test"
TESTS = @TESTS@

TOOLS = @TOOLS@

# Various configurable paths (remember to edit Makefile.in, not Makefile)
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@

CC = @CC@
LN_S = @LN_S@
XSLTPROC = @XSLTPROC@
XSLTMANSTYLE = @XSLTMANSTYLE@
DOXYGEN = @DOXYGEN@
DOXYGEN_CONFIG = Doxyfile
DOXYGEN_DIR = doxygen
RPMBUILD = @RPMBUILD@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
RPMDIR = RPMBUILD
LIBS = @LIBS@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
@SET_MAKE@

OBJDIR= .obj
VERSION = $(shell cut -f1 ./VERSION | tr -d '\n')
MAJOR_VER = $(shell echo $(VERSION) | cut -d. -f1)
RELEASE = @RELEASE@

OBJS = $(SRCS:%.c=$(OBJDIR)/%.o)

#MANPATH=$(DESTDIR)$(mandir)/man$(subst .,,$(suffix $(1)))                                                                                                                                                                                    
#define MANINSTALL                                                                                                                                                                                                                            
#[ -d $(call MANPATH,$(1)) ] || \
#	(mkdir -p $(call MANPATH,$(1)); \
#	chmod 755 $(call MANPATH,$(1))); \
#$(INSTALL_DATA) $(1) $(call MANPATH,$(1))/;
#endef

all: ipfixcol

ipfixcol: $(OBJS)
	@rm -f $@;
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DBG) $(LIBS) $(OBJS) -o $@

$(OBJDIR)/%.o: %.c
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(CC) $(CFLAGS) $(CPPFLAGS) $(INCLUDES) $(DBG) -c $< -o $@

.PHONY: plugins input-plugins storage-plugins $(STORAGE_PLUGINS) $(INPUT_PLUGINS)
plugins: input-plugins storage-plugins

input-plugins: $(INPUT_PLUGINS)

storage-plugins: $(STORAGE_PLUGINS)

$(INPUT_PLUGINS):
	$(MAKE) -C src/input/${@F}

$(STORAGE_PLUGINS):
	$(MAKE) -C src/storage/${@F}

doxygen: $(DOXYGEN_CONFIG) $(HDRS) ipfixcol.h $(SRCS) $(PHDRS)
	@[ -d $(DOXYGEN_DIR) ] || mkdir -p $(DOXYGEN_DIR); \
	if [ -n "$(DOXYGEN)" ]; then \
		(cat $(DOXYGEN_CONFIG); \
		echo 'OUTPUT_DIRECTORY = $(DOXYGEN_DIR)' ) | \
		$(DOXYGEN) - > /dev/null; \
	else \
		echo "Missing doxygen"; \
		exit 1; \
	fi

man: $(addprefix $(MANDIR)/, $(MANSRC))
	@if [ -n "$(XSLTPROC)" ]; then \
		if [ -f "$(XSLTMANSTYLE)" ]; then \
			cd $(MANDIR); \
			for i in $(MANSRC); do \
				echo $(XSLTPROC) $(XSLTMANSTYLE) $$i; \
				$(XSLTPROC) $(XSLTMANSTYLE) $$i; \
			done; \
			for i in `ls -1 | grep -v -E "*.dbk$$"`; do \
				gzip $$i; \
			done; \
			cd - > /dev/null; \
		else \
			echo "Missing $(XSLTMANSTYLE)!"; \
			exit 1; \
		fi \
	else \
		echo "Missing xsltproc"; \
	fi


.PHONY: doc man
doc: doxygen man

.PHONY: dist
dist: tarball rpm

.PHONY: tarball
tarball: $(SRCS) $(HDRS) $(PHDRS)
	@rm -rf $(NAME)-$(VERSION); \
	mkdir $(NAME)-$(VERSION); \
	rm -rf $(RPMDIR)/SOURCES/; \
	mkdir -p $(RPMDIR)/SOURCES/; \
	for i in $(SRCS) $(HDRS) $(PHDRS) $(CONF) $(MANDIR)/*.dbk configure.in configure Makefile.in VERSION \
		Doxyfile $(NAME).spec.in $(NAME).pc.in install-sh ipfixcol.h headers/ipfixcol.h; do \
		[ "$$i" != "$${i%/*}" -a ! -d $(NAME)-$(VERSION)/$${i%/*} ] && mkdir -p $(NAME)-$(VERSION)/$${i%/*}; \
		cp -r $$i $(NAME)-$(VERSION)/$$i; \
	done;
	for i in $(STORAGE_PLUGINS) ; do $(MAKE) -C $$i tarball-prepare; done; \
	for i in $(INPUT_PLUGINS) ; do $(MAKE) -C $$i tarball-prepare; done; \
	tar -c -z -f $(RPMDIR)/SOURCES/$(NAME)-$(VERSION)-$(RELEASE).tar.gz \
	    $(NAME)-$(VERSION);
	@rm -rf $(NAME)-$(VERSION);
	#for i in tools/$(TOOLS) ; do $(MAKE) -C $$i tarball-prepare; done; 

.PHONY: rpm
rpm: tarball $(NAME).spec
	@mkdir -p $(RPMDIR)/BUILD $(RPMDIR)/RPMS $(RPMDIR)/SOURCES $(RPMDIR)/SPECS $(RPMDIR)/SRPMS;
	$(RPMBUILD) -ba $(NAME).spec \
		--define "_topdir `pwd`/$(RPMDIR)";

.PHONY: cleanall
cleanall: clean distclean

.PHONY: distclean
distclean:
	rm -rf $(RPMDIR)

.PHONY: install
#install: install-devel install-doc $(TARGETS) $(MANPAGES)
install: install-devel install-doc $(TARGETS)
	[ -d $(DESTDIR)/$(bindir) ] || \
	    (mkdir -p $(DESTDIR)/$(bindir); chmod 755 $(DESTDIR)/$(bindir))
	for i in $(STORAGE_PLUGINS) ; do $(MAKE) -C $$i DESTDIR=$(DESTDIR) install; done; \
	for i in $(INPUT_PLUGINS) ; do $(MAKE) -C $$i DESTDIR=$(DESTDIR) install; done; \
	$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)/$(bindir)/;
	[ -d $(DESTDIR)/etc/ipfixcol ] || \
	    (mkdir -p $(DESTDIR)/etc/ipfixcol; chmod 755 $(DESTDIR)/etc/ipfixcol)
	$(INSTALL_DATA) $(CONF) $(DESTDIR)/etc/ipfixcol/;
	for i in 1 5; do \
		[ -d $(DESTDIR)$(mandir)/man$$i/ ] || \
			(mkdir -p $(DESTDIR)$(mandir)/man$$i/; chmod 755 $(DESTDIR)$(mandir)/man$$i/); \
			cd $(MANDIR); \
			$(INSTALL_DATA) `ls -1 | grep -E "*.$$i.gz$$"` $(DESTDIR)$(mandir)/man$$i/; \
			cd - > /dev/null; \
	done;
	#$(foreach man,$(MANPAGES),$(call MANINSTALL,$(man)))

.PHONY: install-devel
install-devel: $(HDRS) headers/ipfixcol.h $(NAME).pc
	[ -d $(DESTDIR)/$(libdir)/pkgconfig ] || \
	    (mkdir -p $(DESTDIR)/$(libdir)/pkgconfig; chmod 755 $(DESTDIR)/$(libdir)/pkgconfig)
	[ -d $(DESTDIR)/$(includedir) ] || \
	    (mkdir -p $(DESTDIR)/$(includedir); chmod 755 $(DESTDIR)/$(includedir))
	[ -d $(DESTDIR)/$(includedir)/ipfixcol ] || \
	    (mkdir -p $(DESTDIR)/$(includedir)/ipfixcol; chmod 755 $(DESTDIR)/$(includedir)/ipfixcol)
	for i in $(HDRS); do \
		$(INSTALL_DATA) $$i $(DESTDIR)/$(includedir)/`dirname $$i | sed s'/headers/ipfixcol/'`/; \
	done; \
	$(INSTALL_DATA) headers/ipfixcol.h $(DESTDIR)/$(includedir)/ipfixcol.h;
	$(INSTALL_DATA) $(NAME).pc $(DESTDIR)/$(libdir)/pkgconfig/$(NAME).pc;

.PHONY: install-doc
install-doc:
	[ -d $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR) ] || \
		(mkdir -p $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR); \
		chmod -R 755 $(DESTDIR)/$(datadir)/$(NAME))
	cp -r $(DOXYGEN_DIR)/* $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR)/;

.PHONY: clean
clean:
	rm -rf *.a *.so* $(OBJDIR) $(DOXYGEN_DIR) $(RPMDIR) $(MANDIR)/*.gz; \
	for i in $(INPUT_PLUGINS) $(STORAGE_PLUGINS); do \
		$(MAKE) $@ -C $$i; \
	done; \
	for i in $(TESTS); do \
		$(MAKE) $@ -C devel-tools/tests/$$i; \
	done;

test:
	for i in $(TESTS); do \
		$(MAKE) -C devel-tools/tests/$$i; \
	done;
